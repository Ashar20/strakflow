# Chippy Pay Workflow Builder - Environment Variables
# Copy this file to .env.local: cp env.example .env.local

# ============================================
# Network Configuration
# ============================================

# Starknet Network (mainnet, sepolia, devnet)
NEXT_PUBLIC_STARKNET_NETWORK=sepolia

# Starknet RPC URL
NEXT_PUBLIC_STARKNET_RPC_URL=https://starknet-sepolia.public.blastapi.io

# Chain ID
NEXT_PUBLIC_CHAIN_ID=SN_SEPOLIA

# ============================================
# Contract Addresses (Sepolia Testnet)
# ============================================

# ETH Token Address on Starknet
NEXT_PUBLIC_ETH_TOKEN_ADDRESS=0x049d36570d4e46f48e99674bd3fcc84644ddd6b96f7c741b1562b82f9e004dc7

# STRK Token Address on Starknet
NEXT_PUBLIC_STRK_TOKEN_ADDRESS=0x04718f5a0fc34cc1af16a1cdee98ffb20c31f5cd61d6ab07201858f4287c938d

# ChippyPay uses Starknet's native multicall - no custom contract needed!
# This leverages Starknet's built-in Account Abstraction for batch transfers
# If you want to use a custom batch contract (optional), add address here:
# NEXT_PUBLIC_BATCH_TRANSFER_CONTRACT=0x...

# ============================================
# Wallet Configuration
# ============================================

# Default Wallet Provider (argentx, braavos)
NEXT_PUBLIC_DEFAULT_WALLET=argentx

# Enable Wallet Connect
NEXT_PUBLIC_ENABLE_WALLET_CONNECT=true

# ============================================
# Transaction Configuration
# ============================================

# Default Batch Size
NEXT_PUBLIC_DEFAULT_BATCH_SIZE=10

# Default Delay Between Batches (ms)
NEXT_PUBLIC_DEFAULT_BATCH_DELAY=1000

# Max Transaction Retry Attempts
NEXT_PUBLIC_MAX_RETRY_ATTEMPTS=5

# Transaction Confirmation Timeout (ms)
NEXT_PUBLIC_TX_TIMEOUT=300000

# ============================================
# API Keys (Optional)
# ============================================

# Starknet RPC API Key (if using private RPC)
STARKNET_API_KEY=

# Alchemy API Key (Alternative RPC)
ALCHEMY_API_KEY=

# Infura API Key (Alternative RPC)
INFURA_API_KEY=

# ============================================
# Feature Flags
# ============================================

# Enable Demo Mode (uses simulated transactions)
NEXT_PUBLIC_DEMO_MODE=true

# Enable CSV Validation
NEXT_PUBLIC_ENABLE_CSV_VALIDATION=true

# Enable Address Validation
NEXT_PUBLIC_ENABLE_ADDRESS_VALIDATION=true

# Enable Gas Estimation
NEXT_PUBLIC_ENABLE_GAS_ESTIMATION=true

# ============================================
# Analytics (Optional)
# ============================================

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# Mixpanel Token
NEXT_PUBLIC_MIXPANEL_TOKEN=

# ============================================
# Development Settings
# ============================================

# Enable Debug Logs
NEXT_PUBLIC_DEBUG=false

# Enable Error Reporting
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# Sentry DSN (Error Tracking)
SENTRY_DSN=

# ============================================
# Security
# ============================================

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================
# Export Settings
# ============================================

# Max Export Records
NEXT_PUBLIC_MAX_EXPORT_RECORDS=10000

# Default Export Format (csv, json, pdf)
NEXT_PUBLIC_DEFAULT_EXPORT_FORMAT=csv

# ============================================
# Setup Instructions
# ============================================
# 1. Copy this file: cp env.example .env.local
# 2. Update values according to your environment
# 3. Never commit .env.local to version control
# 4. NEXT_PUBLIC_* variables are exposed to the browser
# 5. Variables without NEXT_PUBLIC_ are server-side only

